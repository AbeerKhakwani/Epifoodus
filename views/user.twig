<html>
    <head>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
        <title>Welcome To Your Page</title>
    </head>
    <body class="container">
        <p>Welcome to your menu {{ user.getUsername }}</p>

        <form action="/logout" method="post">
            <button type="submit">Logout</button>
        </form>

        <a href="/"><button type="submit">Home</button></a>

        {% if is_vegie == 0 %}
        <form action="/user" method="post">
            <label for="vegie_status">Are you a vegetarian?</label>
            <input type="radio" name="vegie_status" value=0 checked>No<br>
            <input type="radio" name="vegie_status" value=1>Yes<br>
            <button type="submit">Submit</button>
        </form>
        {% else %}
        <form action="/user" method="post">
            <label for="vegie_status">Are you a vegetarian?</label>
            <input type="radio" name="vegie_status" value=0>No<br>
            <input type="radio" name="vegie_status" value=1 checked>Yes<br>
            <button type="submit">Submit</button>
        </form>
        {% endif %}

{% if is_admin == 1 %}
<a href="/restaurant_form"><button type="submit">Add Restaurant</button></a>
<a href="/restaurants"><button type="submit">View All Restaurants</button></a>

{% endif %}


{% for like in likes %}
<img src="{{ like.getImg }}" alt="{{ like.getImg }}" height="250px" width="250px"/>
 <li>{{ like.getName }}</li>

{% endfor %}
<p>Here Are Your Dislikes</p>

{% for dislike in dislikes %}
<img src="{{ dislike.getImg }}" alt="{{ dislike.getImg }}" height="250px" width="250px"/>
 <li>{{ dislike.getName }}</li>

{% endfor %}
    </body>
</html>
