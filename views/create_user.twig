<html>
  <head>
  </head>
  <body>

    <div class="container">
      <h1>Create new user!</h2>

      {% if user_id is not empty %}
          <p>Someone is already logged in.</p>
      {% else %}
      {% if exists == 1 %}
          <p>This username already exists</p>
      {% endif %}
      <form action="/create_user" method="post">
          <div class="form-group">
              <label for="name">Username</label>
              <input placeholder="enter username" type="text" name="username" required>
          </div>
          <div class="form-group">
              <label for="password">Password</label>
              <input placeholder= "new password" type="password" name="password" required>
          </div>
          <button type="submit" class="btn btn-success">CREATE!!</button>
      </form>
      {% endif %}
      <form action="/logout" method="post">
          <button type="submit">Logout</button>
      </form>
    </div>
  </body>
</html>
