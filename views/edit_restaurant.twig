<html>
  <head>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
    <title>Epifoodus: I'm Hungry</title>
  </head>
  <body>
    <div class="container">
      <h2>Edit {{ restaurant.getName }}</h2>

      <form action='/restaurants/{{ restaurant.getId }}' method='post'>
        <input name='_method' type='hidden' value='patch'>
        <p>
          <label for='name'>Edit Name:</label>
          <input id='name' name='name' type='text'>
        </p>

        <p>
          <label for='address'>Edit Address:</label>
          <input id='address' name='address' type='text'>
        </p>

        <p>
          <label for='phone'>Edit Phone:</label>
          <input id='phone' name='phone' type='text'>
        </p>

        <p>
          <label for='opentime'>Edit Open:</label>
          <input id='opentime' name='opentime' type='text'>
        </p>

        <p>
          <label for='closetime'>Edit Close:</label>
          <input id='closetime' name='closetime' type='text'>
        </p>

        <button type='submit'>Update</button>
      </form>

      <form action='/restaurants/{{ restaurant.getId }}'method='post'>
        <input name='_method' type='hidden' value='delete'>
        <button type='submit'>Delete this Restaurant</button>
      </form>
    </div>
  </body>
</html>
