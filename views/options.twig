<html>
<head>
<link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
<title>Epifoodus: Choices</title>
</head>
<body>



<div class="container">
<div class="well well-sm" style="text-align:center">

  <div class="row">
    <div class="col-sm-9">
      <div class="col-md-6 col-md-offset-2">
        <h3 class="text-center"> Here's what's on the menu:</h3>
      </div>

  <!-- if user is vegetarian -->
  {% if is_vegie == 1 %}

  <div class="row">
    <div class="col-md-6">
      <a href="/choice/{{ restaurant1veg.getId }}">
        <h1>{{ restaurant1veg.getName }}</h1>
        <img src="{{ restaurant1veg.getImg }}" alt="{{ restaurant1veg.getImg }}" height="250px" width="250px"/>
      </a>
    </div>

    <div class="col-md-6">
      <a href="/choice/{{ restaurant2veg.getId }}">
        <h1>{{ restaurant2veg.getName }}</h1>
        <img src="{{ restaurant2veg.getImg }}" alt="{{ restaurant2veg.getImg }}" height="250px" width="250px"/>
      </a>
    </div>
  </div>


  <!-- if user is not vegetarian -->
  {% else %}

      <div class="row">
        <div class="col-md-6">
          <a href="/choice/{{ restaurant1.getId }}">
            <h1>{{ restaurant1.getName }}</h1>
            <img src="{{ restaurant1.getImg }}" alt="{{ restaurant1.getImg }}" height="250px" width="250px"/>
          </a>
        </div>

        <div class="col-md-6">
          <a href="/choice/{{ restaurant2.getId }}">
            <h1>{{ restaurant2.getName }}</h1>
            <img src="{{ restaurant2.getImg }}" alt="{{ restaurant2.getImg }}" height="250px" width="250px"/>
          </a>
        </div>
      </div>

      {% endif %}

      <br>
      <br>

      <div class="row">
        <div class="col-md-6 col-md-offset-2">
            <form action="/options" method="get">
                <button type="link" name="pass" class="btn-warning btn-lg btn-block">
                    Give me new options
                </button>
            </form>
        </div>
      </div>

    </div>
  </div>
</div>
</div>
</body>
</html>
